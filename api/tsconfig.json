{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./out.d.ts",
    "node_modules",
  ],
  "compilerOptions": {
    /* Projects */
    "target": "es2016",

    /* Modules */
    "module": "CommonJS",
    "baseUrl": "src",
    "paths": {
      "@application/*": ["application/*"],
      "@presentation/*": ["presentation/*"],
      "@infrastructure/*": ["infrastructure/*"],
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}